@model CrudOperationP.Models.Category

@{
    ViewBag.Title = "Edit";
}

<h2>Edit @Model.ProductName</h2>

@using (Html.BeginForm("Edit", "ProCat", FormMethod.Post, new { enctype = "multipart/form_data" }))
{
    @Html.HiddenFor(Model=>Model.ProductId)

    <table class="table">
        <tr>
            <td>Enter Product Name</td>
            <td>@Html.EditorFor(Model => Model.ProductName, new { HtmlAttribute = new { @class = "form-control" } })</td>
        </tr>

        <tr>
            <td>Enter Category id</td>
            <td>@Html.EditorFor(Model => Model.CategoryId, new { HtmlAttribute = new { @class = "form-control" } })</td>
        </tr>

        <tr>
            <td>Enter Category Name</td>
            <td>@Html.EditorFor(Model => Model.CategoryName, new { HtmlAttribute = new { @class = "form-control" } })</td>
        </tr>

        <tr>
            <td calspan="2">
                <input type="submit" name="submit" value="Update data" class="btn btn-success" />
            </td>
        </tr>
    </table>
}

